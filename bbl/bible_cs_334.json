[{"i":33400,"b":54,"c":5602,"r":5602,"o":12,"t": "Neboť předtím, než přišli někteří od Jakuba, stoloval s pohany; ale když přišli, odvrátil se a stranou se držel, neboť se bál obřezaných."},{"i":33401,"b":54,"c":5602,"r":5602,"o":13,"t": "A jiní Židé se k jeho pokrytectví připojili, takže i Barnabáš byl stržen k pokrytectví s nimi."},{"i":33402,"b":54,"c":5602,"r":5602,"o":14,"t": "Ale když jsem viděl, že nejdou přímo podle pravdy evangelia, řekl jsem Petrovi přede všemi: „Jestliže ty, jsa Židem, žiješ jako pohané, a ne po židovsku, jak můžeš nutit pohany, aby se po židovsku chovali?""},{"i":33403,"b":54,"c":5602,"r":5602,"o":15,"t": "„My jsme Židé od přirozenosti, a ne hříšníci z pohanů,"},{"i":33404,"b":54,"c":5602,"r":5602,"o":16,"t": "vědouce však, že člověk není ospravedlněn skutky zákona, nýbrž skrze víru v Ježíše Krista, i my jsme uvěřili v Krista Ježíše, abychom byli ospravedlněni skrze víru v Krista, a ne skrze skutky zákona, neboť skrze skutky zákona nebude ospravedlněn žádný člověk."},{"i":33405,"b":54,"c":5602,"r":5602,"o":17,"t": "Jestliže pak hledajíce ospravedlnění v Kristu, i my sami jsme shledáni hříšníky, zda Kristus je služebník hříchu? V žádném případě!"},{"i":33406,"b":54,"c":5602,"r":5602,"o":18,"t": "Neboť buduji-li znovu to, co jsem zrušil, činím se přestupníkem."},{"i":33407,"b":54,"c":5602,"r":5602,"o":19,"t": "Neboť skrze zákon jsem zemřel zákonu, abych žil Bohu. S Kristem jsem ukřižován,"},{"i":33408,"b":54,"c":5602,"r":5602,"o":20,"t": "a nežiji již já, ale žije ve mně Kristus. A to, že nyní žiji v těle, žiji ve víře v Syna Božího, který mě miloval a vydal sebe sama za mne."},{"i":33409,"b":54,"c":5602,"r":5602,"o":21,"t": "Nepohrdám milostí Boží; neboť jestliže ospravedlnění skrze zákon, tedy Kristus nadarmo zemřel.“"},{"i":33410,"b":54,"c":5603,"r":5603,"o":1,"t": "Ó, nerozumní Galatští, kdo vás očaroval, vám, před jejichž očima byl Ježíš Kristus zobrazen jako ukřižovaný?"},{"i":33411,"b":54,"c":5603,"r":5603,"o":2,"t": "Jen toto chci se od vás dovědět: Skrze skutky zákona jste přijali Ducha, nebo skrze slyšení víry?"},{"i":33412,"b":54,"c":5603,"r":5603,"o":3,"t": "Tak nerozumní jste? Začali jste Duchem, a nyní dokončujete tělem?"},{"i":33413,"b":54,"c":5603,"r":5603,"o":4,"t": "Takovými věcmi jste trpěli nadarmo? Jestliže skutečně nadarmo."},{"i":33414,"b":54,"c":5603,"r":5603,"o":5,"t": "Ten, který vám dává Ducha a činí zázraky mezi vámi, činí to skrze skutky zákona, nebo skrze slyšení víry?"},{"i":33415,"b":54,"c":5603,"r":5603,"o":6,"t": "Jako Abraham uvěřil Bohu, a bylo mu to počítáno za spravedlnost."},{"i":33416,"b":54,"c":5603,"r":5603,"o":7,"t": "Vězte tedy, že ti, kteří jsou z víry, jsou synové Abrahamovi."},{"i":33417,"b":54,"c":5603,"r":5603,"o":8,"t": "A Písmo předvídalo, že Bůh ospravedlní pohany skrze víru, předem zvěstovalo Abrahamovi: V tobě budou požehnány všechny národy."},{"i":33418,"b":54,"c":5603,"r":5603,"o":9,"t": "Takže ti, kteří jsou z víry, jsou požehnáni s věřícím Abrahamem."},{"i":33419,"b":54,"c":5603,"r":5603,"o":10,"t": "Neboť všichni, kteří jsou ze skutků zákona, jsou pod kletbou, neboť je psáno: Prokletý každý, kdo nezůstává ve všem, co je napsáno v knize Zákona, aby to činil."},{"i":33420,"b":54,"c":5603,"r":5603,"o":11,"t": "Že skrze Zákon nikdo není ospravedlněn před Bohem, je zřejmé, neboť spravedlivý bude žít z víry,"},{"i":33421,"b":54,"c":5603,"r":5603,"o":12,"t": "Zákon však není z víry, ale: Kdo je bude činit, bude jimi živ."},{"i":33422,"b":54,"c":5603,"r":5603,"o":13,"t": "Kristus nás vykoupil z kletby Zákona, když se stal kletbou za nás, neboť je psáno: Prokletý každý, kdo visí na dřevě,"},{"i":33423,"b":54,"c":5603,"r":5603,"o":14,"t": "aby na pohany přešlo v Kristu Ježíši požehnání Abrahamovo a abychom skrze víru přijali zaslíbeného Ducha."},{"i":33424,"b":54,"c":5603,"r":5603,"o":15,"t": "Bratři, říkám to podle lidských zvyklostí: ani lidská závěť, která byla platně potvrzena, nemůže být zrušena, ani k ní nemůže být nic přidáno."},{"i":33425,"b":54,"c":5603,"r":5603,"o":16,"t": "Abrahamovi byly dány zaslíbení a jeho potomstvu. Nepraví: „A potomkům“, jako o mnohých, nýbrž jako o jednom: „A tvému potomstvu“, kterým je Kristus."},{"i":33426,"b":54,"c":5603,"r":5603,"o":17,"t": "A toto pravím: Závěť, kterou Bůh předtím potvrdil, Zákon, který přišel o čtyři sta třicet let později, nemůže zrušit, aby zmařil zaslíbení."},{"i":33427,"b":54,"c":5603,"r":5603,"o":18,"t": "Neboť jestliže dědictví je ze zákona, pak již není ze zaslíbení. Ale Bůh dal Abrahamovi dědictví skrze zaslíbení."},{"i":33428,"b":54,"c":5603,"r":5603,"o":19,"t": "Proč tedy Zákon? Byl přidán kvůli přestoupením, dokud nepřijde potomstvo, jemuž bylo zaslíbení dáno, ustanovené anděly rukou prostředníka."},{"i":33429,"b":54,"c":5603,"r":5603,"o":20,"t": "Prostředník však není pro jednoho, ale Bůh je jeden."},{"i":33430,"b":54,"c":5603,"r":5603,"o":21,"t": "Je tedy Zákon proti zaslíbením Božím? V žádném případě! Neboť jestliže byl dán Zákon, který mohl dát život, pak by skutečně spravedlnost byla ze Zákona."},{"i":33431,"b":54,"c":5603,"r":5603,"o":22,"t": "Ale Písmo všechno uzavřelo pod hřích, aby zaslíbení, které je z víry Ježíše Krista, bylo dáno věřícím."},{"i":33432,"b":54,"c":5603,"r":5603,"o":23,"t": "Před příchodem víry jsme byli střeženi pod Zákonem, uzavřeni pro víru, která měla být zjevena."},{"i":33433,"b":54,"c":5603,"r":5603,"o":24,"t": "Takže Zákon byl naším vychovatelem ke Kristu, abychom byli ospravedlněni z víry."},{"i":33434,"b":54,"c":5603,"r":5603,"o":25,"t": "Ale když přišla víra, již nejsme pod vychovatelem,"},{"i":33435,"b":54,"c":5603,"r":5603,"o":26,"t": "neboť všichni jste synové Boží skrze víru v Krista Ježíše."},{"i":33436,"b":54,"c":5603,"r":5603,"o":27,"t": "Neboť všichni, kteří jste byli pokřtěni v Krista, Krista jste oblékli."},{"i":33437,"b":54,"c":5603,"r":5603,"o":28,"t": "Není Žid, ani Řek, není otrok, ani svobodný, není muž, ani žena; neboť všichni jste jedno v Kristu Ježíši."},{"i":33438,"b":54,"c":5603,"r":5603,"o":29,"t": "Jestliže pak jste Kristovi, tedy jste potomstvo Abrahamovo a dědicové podle zaslíbení."},{"i":33439,"b":54,"c":5604,"r":5604,"o":1,"t": "Pravím však: Dokud je dědic nezletilý, ničím se neliší od otroka, ačkoli je pánem všeho,"},{"i":33440,"b":54,"c":5604,"r":5604,"o":2,"t": "nýbrž je pod poručníky a správci až do času určeného od otce."},{"i":33441,"b":54,"c":5604,"r":5604,"o":3,"t": "Tak i my, když jsme byli nezletilí, byli jsme v otroctví pod živly světa."},{"i":33442,"b":54,"c":5604,"r":5604,"o":4,"t": "Ale když přišla plnost času, Bůh poslal svého Syna, narozeného ze ženy, narozeného pod Zákonem,"},{"i":33443,"b":54,"c":5604,"r":5604,"o":5,"t": "aby vykoupil ty, kteří jsou pod Zákonem, abychom přijali synovství."},{"i":33444,"b":54,"c":5604,"r":5604,"o":6,"t": "A protože jste synové, Bůh poslal Ducha svého Syna do vašich srdcí, volajícího: Abba, Otče!"},{"i":33445,"b":54,"c":5604,"r":5604,"o":7,"t": "A tak již nejsi otrok, nýbrž syn; a jsi-li syn, tedy i dědic Boží skrze Krista."},{"i":33446,"b":54,"c":5604,"r":5604,"o":8,"t": "Tehdy, když jste neznali Boha, sloužili jste těm, kteří od přirozenosti nejsou bohy,"},{"i":33447,"b":54,"c":5604,"r":5604,"o":9,"t": "ale nyní, když jste poznali Boha, anebo spíše jste byli poznáni od Boha, jak se vracíte zpět k těm bezmocným a ubohým živlům, kterým chcete opět sloužit?"},{"i":33448,"b":54,"c":5604,"r":5604,"o":10,"t": "Zachováváte dny, měsíce, časy a léta."},{"i":33449,"b":54,"c":5604,"r":5604,"o":11,"t": "Bojím se o vás, zda jsem se nad vámi snad zbytečně namáhal."},{"i":33450,"b":54,"c":5604,"r":5604,"o":12,"t": "Buďte jako já, neboť i já jsem jako vy. Bratři, prosím vás, nijak jste mi neublížili."},{"i":33451,"b":54,"c":5604,"r":5604,"o":13,"t": "Víte, že skrze tělesnou slabost jsem vám poprvé zvěstoval evangelium,"},{"i":33452,"b":54,"c":5604,"r":5604,"o":14,"t": "a nepohrdli jste mou zkouškou, která byla v mém těle, ani jste se neštítili, ale přijali jste mě jako anděla Božího, jako Krista Ježíše."},{"i":33453,"b":54,"c":5604,"r":5604,"o":15,"t": "Kde je tedy to vaše blahoslavenství? Neboť vám svědčím, že kdyby to bylo možné, byli byste si vyloupli oči a dali mi je."},{"i":33454,"b":54,"c":5604,"r":5604,"o":16,"t": "Stal jsem se tedy vaším nepřítelem tím, že vám říkám pravdu?"},{"i":33455,"b":54,"c":5604,"r":5604,"o":17,"t": "Horlivě o vás usilují, ale ne dobře, nýbrž chtějí vás odloučit, abyste horlili pro ně."},{"i":33456,"b":54,"c":5604,"r":5604,"o":18,"t": "Dobré je horlit v dobré věci vždycky, a ne jen tehdy, když jsem u vás,"},{"i":33457,"b":54,"c":5604,"r":5604,"o":19,"t": "mé děti, pro které opět trpím bolestmi, dokud v vás nebude ztvárněn Kristus."},{"i":33458,"b":54,"c":5604,"r":5604,"o":20,"t": "Kéž bych nyní byl u vás a mohl změnit svůj hlas, neboť jsem s vámi v rozpacích."},{"i":33459,"b":54,"c":5604,"r":5604,"o":21,"t": "Řekněte mi vy, kteří chcete být pod Zákonem: Neslyšíte Zákon?"},{"i":33460,"b":54,"c":5604,"r":5604,"o":22,"t": "Neboť je psáno, že Abraham měl dva syny, jednoho z otrokyně a druhého ze svobodné."},{"i":33461,"b":54,"c":5604,"r":5604,"o":23,"t": "Ale ten z otrokyně se narodil podle těla, a ten ze svobodné skrze zaslíbení."},{"i":33462,"b":54,"c":5604,"r":5604,"o":24,"t": "To má alegorický význam, neboť ony dvě ženy jsou dva svazky; jeden z hory Sinaj, který rodí do otroctví, a tím je Hagar."},{"i":33463,"b":54,"c":5604,"r":5604,"o":25,"t": "Neboť Hagar značí horu Sinaj v Arábii a odpovídá nynějšímu Jeruzalému, neboť ten je v otroctví se svými dětmi."},{"i":33464,"b":54,"c":5604,"r":5604,"o":26,"t": "Ale Jeruzalém, který je nahoře, je svobodný a je matkou nás všech,"},{"i":33465,"b":54,"c":5604,"r":5604,"o":27,"t": "neboť je psáno: Vesel se, neplodná, která nerodíš, propukni a volej, která neznáš bolestí, neboť více dětí má opuštěná než ta, která má manžela."},{"i":33466,"b":54,"c":5604,"r":5604,"o":28,"t": "My pak, bratři, jako Izák, jsme děti zaslíbení."},{"i":33467,"b":54,"c":5604,"r":5604,"o":29,"t": "Ale jako tehdy ten, který se narodil podle těla, pronásledoval toho, který se narodil podle Ducha, tak i nyní."},{"i":33468,"b":54,"c":5604,"r":5604,"o":30,"t": "Ale co říká Písmo? Vyžeň otrokyni i jejího syna, neboť syn otrokyně nebude dědit s synem svobodné."},{"i":33469,"b":54,"c":5604,"r":5604,"o":31,"t": "A tak, bratři, nejsme dětmi otrokyně, nýbrž svobodné."},{"i":33470,"b":54,"c":5605,"r":5605,"o":1,"t": "Pro svobodu nás Kristus osvobodil. Stůjte tedy pevně a nedejte se opět zapřáhnout do jha otroctví."},{"i":33471,"b":54,"c":5605,"r":5605,"o":2,"t": "Hle, já, Pavel, vám říkám, že jestliže se dáte obřezat, Kristus vám nebude nic platný."},{"i":33472,"b":54,"c":5605,"r":5605,"o":3,"t": "A opět svědčím každému člověku, který se dává obřezat, že je povinen plnit celý Zákon."},{"i":33473,"b":54,"c":5605,"r":5605,"o":4,"t": "Od Krista jste odpadli vy, kteří se chcete ospravedlnit Zákonem; vypadli jste z milosti."},{"i":33474,"b":54,"c":5605,"r":5605,"o":5,"t": "Neboť my skrze Ducha z víry očekáváme naději spravedlnosti."},{"i":33475,"b":54,"c":5605,"r":5605,"o":6,"t": "Neboť v Kristu Ježíši neplatí ani obřízka, ani neobřízka, nýbrž víra, která působí skrze lásku."},{"i":33476,"b":54,"c":5605,"r":5605,"o":7,"t": "Dobře jste běželi; kdo vám zabránil, abyste neposlouchali pravdu?"},{"i":33477,"b":54,"c":5605,"r":5605,"o":8,"t": "Toto přesvědčování není od toho, který vás volá."},{"i":33478,"b":54,"c":5605,"r":5605,"o":9,"t": "Malý kvas zkvasí celé těsto."},{"i":33479,"b":54,"c":5605,"r":5605,"o":10,"t": "Jsem o vás přesvědčen v Pánu, že nebudete smýšlet jinak. Ale ten, kdo vás znepokojuje, ponese svůj soud, ať je to kdokoli."},{"i":33480,"b":54,"c":5605,"r":5605,"o":11,"t": "Jestliže já, bratři, dosud káži obřízku, proč jsem dosud pronásledován? Pak je zrušen kámen úrazu kříže."},{"i":33481,"b":54,"c":5605,"r":5605,"o":12,"t": "Kéž by se ti, kteří vás pobuřují, dali rovnou vykastrovat!"},{"i":33482,"b":54,"c":5605,"r":5605,"o":13,"t": "Neboť vy jste byli povoláni ke svobodě, bratři. Jen ať se svoboda nestane záminkou pro tělo, nýbrž skrze lásku služte jeden druhému."},{"i":33483,"b":54,"c":5605,"r":5605,"o":14,"t": "Neboť celý Zákon je naplněn v jednom slově, v tomto: Miluj svého bližního jako sebe sama."},{"i":33484,"b":54,"c":5605,"r":5605,"o":15,"t": "Jestliže se však navzájem koušete a požíráte, dejte si pozor, abyste se navzájem nezničili."},{"i":33485,"b":54,"c":5605,"r":5605,"o":16,"t": "Pravím tedy: Choďte Duchem, a nebudete naplňovat žádosti těla."},{"i":33486,"b":54,"c":5605,"r":5605,"o":17,"t": "Neboť tělo žádá proti Duchu a Duch proti tělu; jsou proti sobě, abyste nečinili to, co chcete."},{"i":33487,"b":54,"c":5605,"r":5605,"o":18,"t": "Jste-li však vedeni Duchem, nejste pod Zákonem."},{"i":33488,"b":54,"c":5605,"r":5605,"o":19,"t": "Skutky těla jsou zjevné: smilstvo, nečistota, nestydatost,"},{"i":33489,"b":54,"c":5605,"r":5605,"o":20,"t": "modloslužba, čarodějnictví, nepřátelství, svár, žárlivost, hněv, soupeření, roztržky, sekty,"},{"i":33490,"b":54,"c":5605,"r":5605,"o":21,"t": "závidění, vraždy, opilství, hýření a podobné věci, o kterých vám předpovídám, jako jsem již dříve řekl, že ti, kteří takové věci činí, nezdědí království Boží."},{"i":33491,"b":54,"c":5605,"r":5605,"o":22,"t": "Ovoce Ducha je pak láska, radost, pokoj, trpělivost, laskavost, dobrota, věrnost,"},{"i":33492,"b":54,"c":5605,"r":5605,"o":23,"t": "mírnost, sebeovládání. Proti takovým věcem není Zákon."},{"i":33493,"b":54,"c":5605,"r":5605,"o":24,"t": "Ti pak, kteří jsou Kristovi, ukřižovali tělo s jeho vášněmi a žádostmi."},{"i":33494,"b":54,"c":5605,"r":5605,"o":25,"t": "Žijeme-li Duchem, tedy i choďme Duchem."},{"i":33495,"b":54,"c":5605,"r":5605,"o":26,"t": "Nebuďme ješitní, navzájem se nedrážděme, navzájem si nezáviďme."},{"i":33496,"b":54,"c":5606,"r":5606,"o":1,"t": "Bratři, jestliže i kdyby byl někdo přistižen v nějakém provinění, vy, kteří jste duchovní, napravte ho v duchu mírnosti; dej si pozor sám na sebe, abys i ty nebyl pokoušen."},{"i":33497,"b":54,"c":5606,"r":5606,"o":2,"t": "Neste břemena jeden druhého, a tak naplníte Zákon Kristův."},{"i":33498,"b":54,"c":5606,"r":5606,"o":3,"t": "Neboť jestliže si někdo myslí, že je něco, ačkoli není nic, klame sám sebe."},{"i":33499,"b":54,"c":5606,"r":5606,"o":4,"t": "Ať každý zkoumá své vlastní skutky, a tehdy se bude moci chlubit sám sebou, a ne druhým,"}]